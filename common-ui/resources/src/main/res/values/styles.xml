    <style name="ThemeOverlay.PopularMovies.Light" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorPrimary">@color/material_blue500</item>
        <item name="colorPrimaryVariant">@color/material_blue800</item>
    </style>

</resources>
